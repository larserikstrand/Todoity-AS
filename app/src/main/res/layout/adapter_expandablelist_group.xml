<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_heading_view_height"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >
    
    <TextView android:id="@+id/group_date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:paddingLeft="?android:expandableListPreferredItemPaddingLeft"
        android:paddingRight="?android:expandableListPreferredItemPaddingLeft"
        android:textSize="@dimen/default_heading_text_size"
        android:fontFamily="sans-serif-light" />
    
    <ImageButton android:id="@+id/group_edit_button"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_content_edit"
        android:contentDescription="@string/edit" />
    
    <ImageButton android:id="@+id/group_delete_button"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_content_discard"
        android:contentDescription="@string/delete" />

</LinearLayout>
